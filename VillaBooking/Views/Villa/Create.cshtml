@model Domain.Entities.Villa

<div class="container">
    <h1 class="text-center bg-success text-white py-3"> Add New Villa </h1>
</div> 


<div class="card-body p-4">
    <form method="post" class="row"  enctype="multipart/form-data">
        <div class="p-3">
              <div asp-validation-summary="All"></div>
            <div class="form-floating py-2 col-12">
              
                 <input asp-for="Name" class="form-control border shadow" />
                 <label asp-for="Name" class="ms-2"></label>
                 <span asp-validation-for="Name" class="text-danger"></span>
             </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="@Model.Description" class="form-control border shadow" />
                <label asp-for="Description" class="ms-2"></label>
                  <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="@Model.Price" class="form-control border shadow" />
                <label asp-for="Price" class="ms-2"></label>
                  <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="@Model.Sqft" class="form-control border shadow" />
                <label asp-for="Sqft" class="ms-2"></label>
                  <span asp-validation-for="Sqft" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="@Model.ImageUrl" hidden class="form-control border shadow" />
                <input asp-for="@Model.Image"  class="form-control border shadow" />
                <label asp-for="ImageUrl" class="ms-2"></label>
                  <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="@Model.Occupancy"  class="form-control border shadow" />
                <label asp-for="Occupancy" class="ms-2"></label>
                  <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>

            <div class="row p-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-success w-100">
                      <i class="bi bi-check-cirvle"></i> Create

                    </button>

                </div>

                 <div class="col-6 col-md-3">
                    <a asp-controller="Villa" asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-check-cirvle"></i> Back 
                    </a>

                </div>
            </div>
        </div


    </form>
</div>

                    @section Scripts{
                        @{
                            <partial name ="_ValidationScriptsPartial"/>
                        }
                    }