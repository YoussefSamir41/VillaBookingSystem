@model Domain.Entities.Booking;

<div class="p-4 mt-0 mt-lg-4">
    <div class="row" style="border: 1px solid #aaa;">

        <!-- Villa Details Section -->
        <div class="col-12 col-lg-6 p-4 mt-2 mt-md-0">
            <div class="row p-1" style="border-radius:20px;">
                <div class="col-6">
                    <h3 class="text-success">Villa Details</h3>
                </div>
                <div class="col-6 text-end">
                    <a href="/booking" class="btn btn-secondary my-2"><i class="bi bi-arrow-left-circle"></i> Back to Bookings</a>
                </div>
                <hr />
                <div>
                    <h4 class="text-danger font-weight-bold">
                        Booking Total:
                        <span style="border-bottom:1px solid #ff6a00">
                            @Model.TotalCost.ToString("C")
                        </span>
                    </h4>
                </div>
            </div>
        </div>

        <!-- Booking Details Form Section -->
        <div class="col-12 col-lg-6 p-4 mt-4 mt-md-0" style="border-left:1px solid #aaa">
            <form method="post">
                <div class="row pt-1 mb-3" style="border-radius:20px;">
                    <div class="col-6">
                        <h3 class="text-success">Enter Booking Details</h3>
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-sm btn-outline-danger form-control my-1"><i class="bi bi-x-circle"></i> &nbsp; Cancel Booking</button>
                    </div>
                </div>

                <div class="row">
                    <!-- Name -->
                    <div class="form-group pt-2 col-6">
                        <label class="text-warning">Name</label>
                        <input class="form-control" value="@Model.Name" disabled />
                    </div>

                    <!-- Phone -->
                    <div class="form-group pt-2 col-6">
                        <label class="text-warning">Phone</label>
                        <input class="form-control" value="@Model.Phone" disabled />
                    </div>

                    <!-- Email -->
                    <div class="form-group pt-2 col-6">
                        <label class="text-warning">Email</label>
                        <input class="form-control" value="@Model.Email" disabled />
                    </div>

                    <!-- Check-in Date -->
                    <div class="form-group pt-2 col-6">
                        <label class="text-warning">Check-in Date</label>
                        <input class="form-control" value="@Model.CheckInDate.ToString("yyyy-MM-dd")" disabled />
                    </div>

                    <!-- Check-out Date -->
                    <div class="form-group pt-2 col-6">
                        <label class="text-warning">Check-out Date</label>
                        <input class="form-control" value="@Model.CheckOutDate.ToString("yyyy-MM-dd")" disabled />
                    </div>

                    <!-- Number of Nights -->
                    <div class="form-group pt-2 col-6">
                        <label class="text-warning">No. of nights</label>
                        <input class="form-control" value="@Model.Nights" disabled />
                    </div>

                    <!-- Status -->
                    <div class="form-group pt-2 col-6">
                        <label class="text-warning">Status</label>
                        <input class="form-control" value="@Model.Status" disabled />
                    </div>

                    <!-- Booking Date -->
                    <div class="form-group pt-2 col-6">
                        <label class="text-warning">Booking Date</label>
                        <input class="form-control" value="@Model.BookingDate.ToString("yyyy-MM-dd")" disabled />
                    </div>

                    <!-- Actual Check-in and Check-out Dates -->
                    <div class="form-group pt-2 col-6">
                        <label class="text-warning">Actual Check-in Date</label>
                        <input class="form-control" value="@Model.ActualCheckInDate.ToString("yyyy-MM-dd")" disabled />
                    </div>
                    <div class="form-group pt-2 col-6">
                        <label class="text-warning">Actual Check-out Date</label>
                        <input class="form-control" value="@Model.ActualCheckOutDate.ToString("yyyy-MM-dd")" disabled />
                    </div>

                    <!-- Stripe Payment IDs -->
                    <div class="form-group pt-2 col-6">
                        <label class="text-warning">Stripe PaymentIntent Id</label>
                        <input class="form-control" value="@Model.StripePaymentIntentId" disabled />
                    </div>
                    <div class="form-group pt-2 col-6">
                        <label class="text-warning">Stripe Session Id</label>
                        <input class="form-control" value="@Model.StripeSessionId" disabled />
                    </div>
                    <div class="form-group pt-2 col-6">
                        <label class="text-warning">Payment Date</label>
                        <input class="form-control" value="@Model.PaymentDate.ToString("yyyy-MM-dd")" disabled />
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="form-group pt-2 pt-md-4">
                    <button type="submit" class="btn btn-warning form-control my-1"><i class="bi bi-check2-square"></i> &nbsp; Check In</button>
                    <button type="submit" class="btn btn-success form-control my-1"><i class="bi bi-clipboard2-check"></i> &nbsp; Check Out / Complete Booking</button>
                </div>
            </form>
        </div>
    </div>
</div>
