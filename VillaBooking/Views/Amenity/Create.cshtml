@using VillaBooking.ViewModels;
@model AmenityVM

<div class="container">
    <h1 class="text-center bg-success text-white py-3"> Add New Amenity </h1>
</div>


<div class="card-body p-4">
    <form method="post" class="row">
        <div class="p-3">
            <div asp-validation-summary="All"></div>
            <div class="form-floating py-2 col-12">

                <select asp-for="@Model.Amenity.VillaId" asp-items="@Model.AmenityList"
                        class="form-select border shadow">
                    <option disabled selected> -- Select Villa -- </option>
                </select>

                <label asp-for="Amenity.VillaId" class="ms-2"></label>
                <span asp-validation-for="Amenity.VillaId" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="@Model.Amenity.Name" class="form-control border shadow" />
                <label asp-for="Amenity.Name" class="ms-2"></label>
                <span asp-validation-for="Amenity.Name" class="text-danger"></span>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="@Model.Amenity.Description" class="form-control border shadow" />
                <label asp-for="Amenity.Description" class="ms-2"></label>
                <span asp-validation-for="Amenity.Description" class="text-danger"></span>
            </div>


            <div class="row p-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-success w-100">
                        <i class="bi bi-check-cirvle"></i> Create

                    </button>

                </div>

                <div class="col-6 col-md-3">
                    <a asp-controller="Amenity" asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-check-cirvle"></i> Back
                    </a>

                </div>
            </div>
        </div>


    </form>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
                    }